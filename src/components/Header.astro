---
const {title} = Astro.props;
---
<header>
  <!-- Background Image Left -->
  <div class="content">
    <h1>{title}</h1>
  </div>
</header>

<style>
  header {
    width: 50%;
    height: 100vh;
    position: relative;
    z-index: 0;
    display: grid;
  }

  .content {
    grid-area: 1/1;
    position: relative;
    place-items: center;
    display: grid;
  }
