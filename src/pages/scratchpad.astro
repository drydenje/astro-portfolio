import '@/styles/global.css'

const panelBackground = "/images/backgroundRight.webp";
const headerBackground = "/images/backgroundLeft.webp";

---

<div class="grid_parent">
  <header class="bg-triangles">  
      <h1>Portfolio</h1>
  </header>

  <!-- <div class="panel">
    <div class="content">
